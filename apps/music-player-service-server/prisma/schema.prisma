datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Playlist {
  createdAt      DateTime        @default(now())
  id             String          @id @default(cuid())
  name           String?
  playlistTracks PlaylistTrack[]
  updatedAt      DateTime        @updatedAt
  user           User?           @relation(fields: [userId], references: [id])
  userId         String?
}

model Track {
  album          String?
  artist         String?
  createdAt      DateTime        @default(now())
  duration       Int?
  file           Json?
  id             String          @id @default(cuid())
  playlistTracks PlaylistTrack[]
  title          String?
  updatedAt      DateTime        @updatedAt
}

model PlaylistTrack {
  createdAt  DateTime  @default(now())
  id         String    @id @default(cuid())
  playlist   Playlist? @relation(fields: [playlistId], references: [id])
  playlistId String?
  track      Track?    @relation(fields: [trackId], references: [id])
  trackId    String?
  updatedAt  DateTime  @updatedAt
}

model User {
  createdAt DateTime   @default(now())
  email     String?    @unique
  firstName String?
  id        String     @id @default(cuid())
  lastName  String?
  password  String
  playlists Playlist[]
  roles     Json
  updatedAt DateTime   @updatedAt
  username  String     @unique
}
